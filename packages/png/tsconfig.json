{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "WebWorker"],
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": ["@types/node"],
		"rootDir": "src",
		"outDir": "dist/edge",
		"tsBuildInfoFile": "dist/edge/tsconfig.tsbuildinfo"
	},
	"include": ["src/**/*.ts", "src/**/*.js", "declarations.d.ts"],
	"exclude": ["node_modules", "dist", "vitest", "src/cjs"]
}
