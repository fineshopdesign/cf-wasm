{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "rootDir": "./src/",
    "outDir": "./dist/dts/",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
