{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2022", "WebWorker", "DOM"],
    "declaration": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "types": ["@types/node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.test.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
