{
  "name": "cf-wasm",
  "private": true,
  "description": "WASM Packages for Cloudflare Workers",
  "author": "Deo Kumar",
  "homepage": "https://github.com/fineshopdesign/cf-wasm",
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "check": "pnpm biome check .",
    "check:types": "turbo check:types --force --concurrency=1",
    "check:fix": "pnpm biome check --apply .",
    "upgrade": "ncu",
    "build": "turbo run build --concurrency=1",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "clean": "turbo run clean --concurrency=1",
    "test": "turbo run test --concurrency=1",
    "publish-packages": "cross-env PUBLISH=true pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.2",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.6",
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.9",
    "console-log-colors": "^0.5.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.5",
    "fs-extra": "^11.2.0",
    "github-files-fetcher": "^1.6.0",
    "glob": "^10.4.2",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "tsx": "^4.15.7",
    "turbo": "^2.0.5",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0",
    "wasm-pack": "^0.12.1"
  }
}
