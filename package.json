{
  "name": "@cf-wasm/root",
  "private": true,
  "description": "A collection of WASM packages those work on Cloudflare Workers",
  "author": "Deo Kumar",
  "homepage": "https://github.com/fineshopdesign/cf-wasm",
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "format": "biome format --max-diagnostics=100 --log-kind=compact",
    "format:all": "pnpm run format .",
    "format:write": "pnpm run format:all --write",
    "lint": "FORCE_COLOR=1 turbo run lint --continue --concurrency=50% --filter='./packages/*'",
    "lint:all": "biome lint --max-diagnostics=100 --log-kind=compact .",
    "lint:fix": "pnpm run lint:all --write",
    "check": "FORCE_COLOR=1 turbo run check --continue --concurrency=50% --filter='./packages/*'",
    "check:all": "biome check --max-diagnostics=150 --log-kind=compact .",
    "check:fix": "pnpm run check:all --write",
    "check:types": "FORCE_COLOR=1 turbo check:types",
    "upgrade": "pnpm dlx npm-check-updates --workspaces --root --reject @resvg/resvg-wasm-legacy --interactive --format group",
    "build": "FORCE_COLOR=1 turbo run build --filter='./packages/*'",
    "dev": "FORCE_COLOR=1 turbo run dev --concurrency=24 --filter='./packages/*'",
    "test": "FORCE_COLOR=1 turbo run test",
    "publish-packages": "PUBLISH=true pnpm run check:types && pnpm run build && changeset publish",
    "version-packages": "changeset version && pnpm run format:write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.8.4",
    "typescript": "^5.9.3"
  }
}
